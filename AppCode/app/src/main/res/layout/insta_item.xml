<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivPostPic"
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvUserInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/iconHeart"
        android:padding="10dp"
        android:text="Username" />

    <TextView
        android:id="@+id/tvCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:layout_below="@+id/tvUserInfo"
        android:text="Caption" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvCaption"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvUserInfo"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iconHeart"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivPostPic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/iconComment"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignEnd="@+id/tvUserInfo"
        android:layout_alignRight="@+id/tvUserInfo"
        android:layout_below="@+id/ivPostPic"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/iconDM"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivPostPic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:tint="#000"
        android:layout_toEndOf="@+id/tvUserInfo"
        android:layout_toRightOf="@+id/tvUserInfo"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/iconSave"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivPostPic"
        android:tint="#000"
        app:srcCompat="@drawable/ufi_save" />
</RelativeLayout>