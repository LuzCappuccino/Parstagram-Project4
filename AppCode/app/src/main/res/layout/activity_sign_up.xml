<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/animation_list"
    android:id="@+id/rlSignUp"
    android:layout_height="match_parent"
    tools:context="com.example.luzcamacho.parstagram.SignUpActivity">

    <EditText
        android:id="@+id/etSetUsername"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:ems="10"
        android:hint="Username"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_textbox"
        android:textColor="#ffff" />

    <EditText
        android:id="@+id/etSetHandle"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSetUsername"
        android:ems="10"
        android:hint="Handle"
        android:textColor="#ffff"
        android:inputType="textMultiLine"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_textbox"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etSetEmail"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSetHandle"
        android:ems="10"
        android:textColor="#ffff"
        android:hint="Email"
        android:inputType="textMultiLine"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_textbox"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etSetPassword"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/etSetEmail"
        android:ems="10"
        android:hint="Password"
        android:textColor="#ffff"
        android:inputType="textMultiLine"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_textbox"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="301dp"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/Transparent"
        android:layout_marginBottom="104dp"
        android:textColor="#ffff"
        android:text="SignUp" />

    <ImageView
        android:tint="#ffff"
        android:id="@+id/ivLogoSignUp"
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/nav_logo_whiteout" />

</RelativeLayout>
