<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luzcamacho.parstagram.PostDetailsActivity">

    <ImageView
        android:id="@+id/ivDetailsPic"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="43dp"
        android:padding="10dp"
        app:srcCompat="@drawable/gradiant_1" />

    <TextView
        android:id="@+id/tvDetailsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvDetailsCaption"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDetailsUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivDetailsPic"
        android:layout_marginTop="39dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDetailsCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvDetailsUsername"
        android:text="TextView" />

    <ImageView
        android:id="@+id/iconDetailsLike"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivDetailsPic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        app:srcCompat="@drawable/ufi_heart" />

    <ImageView
        android:id="@+id/iconDetailsComment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivDetailsPic"
        android:layout_toEndOf="@+id/tvDetailsUsername"
        android:layout_toRightOf="@+id/tvDetailsUsername"
        app:srcCompat="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/iconDetailsSend"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ivDetailsPic"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_toEndOf="@+id/iconDetailsComment"
        android:tint="#000"
        android:layout_toRightOf="@+id/iconDetailsComment"
        app:srcCompat="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/iconDetailsSave"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivDetailsPic"
        android:tint="#000"
        app:srcCompat="@drawable/ufi_save" />

    <ImageView
        android:id="@+id/ivDetailsProfilePic"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="9dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/iconDetailsLike"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/iconDetailsLike"
        app:srcCompat="@android:color/background_dark" />

    <TextView
        android:id="@+id/tvDetailsActualUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/ivDetailsProfilePic"
        android:layout_toEndOf="@+id/ivDetailsProfilePic"
        android:layout_toRightOf="@+id/ivDetailsProfilePic"
        android:text="TextView" />
</RelativeLayout>
